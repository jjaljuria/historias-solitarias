<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3 mt-5">
      <form
        action="/author?_method=PUT"
        method="post"
        class="p-2 rounded bg-light"
      >
        <div class="mb-3">
          <label for="username" class="form-label">Nombre de Usuario</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            value="{{author.username}}"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Descripci√≥n</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            rows="10"
          >{{author.description}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>

    </div>
  </div>
</div>